/* Requires the Docker Pipeline plugin */
pipeline {
    agent { docker { 
               image 'python:3.13.3-alpine3.21' 
               args '-v /mnt/c/usr/src/app:/mnt/app'
            } 
    }
    stages {
        stage('build') {
            steps {
                sh 'ls /mnt/app'
            }
        }
    }
}

